<div class="container">
  <% flash.each do |name,msg| %>
    <div class="alert <%= flash_class(name) %> alert-dismissible fade show" role="info">
      <%= msg %> 
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>
</div>

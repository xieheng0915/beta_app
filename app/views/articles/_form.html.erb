<% if @article.errors.any? %>
  <h2>The following errors prevent the article to be submitted successfully.</h2>
  <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
<% end %>

<%= form_with(model: @article, local: true) do |f|  %>

<p>
  <%= f.label :title %>
  <br/>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :description %>
  <br/>
  <%= f.text_area :description %>
</p>

<p>
  <%= f.submit %>
</p>
<% end %>